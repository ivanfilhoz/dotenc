{
	"$schema": "https://biomejs.dev/schemas/2.4.1/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"cli/src/**",
			"website/src/**/*.ts",
			"website/src/**/*.js",
			"website/src/**/*.html",
			"vscode-extension/src/**",
			"vscode-extension/**/*.json",
			"*.json",
			"!!**/vscode-extension/.vscode-test",
			"!!**/vscode-extension/node_modules"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	}
}
