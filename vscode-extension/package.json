{
	"name": "dotenc-vscode-extension",
	"displayName": "dotenc",
	"description": "Seamless editing for dotenc encrypted environment files.",
	"version": "0.3.0",
	"publisher": "dotenc",
	"icon": "assets/logo-square.png",
	"license": "MIT",
	"homepage": "https://github.com/ivanfilhoz/dotenc",
	"bugs": {
		"url": "https://github.com/ivanfilhoz/dotenc/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ivanfilhoz/dotenc.git"
	},
	"engines": {
		"vscode": "^1.96.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:dotenc.openNative",
		"onCommand:dotenc.openEncryptedSource",
		"onFileSystem:dotenc",
		"onStartupFinished"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dotenc.openNative",
				"title": "dotenc: Open Decrypted Environment"
			},
			{
				"command": "dotenc.openEncryptedSource",
				"title": "dotenc: Open Encrypted Source"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "dotenc.openNative",
					"when": "resourceScheme == file && resourceFilename =~ /^\\.env\\..+\\.enc$/",
					"group": "navigation@1"
				}
			],
			"editor/title": [
				{
					"command": "dotenc.openNative",
					"when": "resourceScheme == file && resourceFilename =~ /^\\.env\\..+\\.enc$/",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "dotenc",
			"properties": {
				"dotenc.autoOpenNative": {
					"type": "boolean",
					"default": true,
					"description": "Automatically replace opened .env.<environment>.enc files with the decrypted native dotenc editor."
				},
				"dotenc.executablePath": {
					"type": "string",
					"default": "dotenc",
					"scope": "machine-overridable",
					"description": "Path to the dotenc CLI executable used by this extension."
				}
			}
		}
	},
	"scripts": {
		"test": "bun test ./tests/unit/core.test.js",
		"test:coverage": "bun test ./tests/unit/core.test.js --coverage --coverage-reporter lcov --coverage-dir coverage",
		"test:integration": "node ./tests/run-integration.js",
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"package": "vsce package",
		"publish:vsce": "vsce publish --skip-duplicate",
		"publish:vsce:pre": "vsce publish --skip-duplicate --pre-release",
		"publish:ovsx": "ovsx publish --skip-duplicate",
		"publish:ovsx:pre": "ovsx publish --skip-duplicate --pre-release"
	},
	"devDependencies": {
		"@types/node": "^25.2.3",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.2",
		"mocha": "^10.8.2",
		"ovsx": "^0.10.9",
		"typescript": "^5.8.2"
	}
}
